---
import { House } from "lucide-react";
import garageBg from "../assets/backgrounds/garage-pro.png";
---

<div
  class="relative w-full h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4 sm:p-8 flex items-center justify-center"
>
  <!-- Główny kontener dopasowany do zawartości -->
  <div
    class="relative h-[50vh] flex flex-col md:flex-row rounded-2xl shadow-2xl overflow-hidden border border-white/10 bg-gradient-to-r from-white/10 to-white/5 backdrop-blur-xl"
  >
    <!-- Lewa strona - Panel informacyjny -->
    <div
      class="w-full md:w-auto md:min-w-[300px] bg-gradient-to-b from-white/10 to-white/5 backdrop-blur-xl p-6 md:p-8 flex flex-col justify-center"
    >
      <div class="space-y-6">
        <!-- Logo/Brand -->
        <div class="text-center md:text-left">
          <div class="flex items-center justify-center md:justify-start gap-3 mb-4">
            <House size={32} className="text-blue-200" />
            <span
              class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text"
            >
              Garage Pro
            </span>
          </div>
          <p class="text-blue-100/80 text-sm leading-relaxed">
            Profesjonalny system zarządzania warsztatem samochodowym
          </p>
        </div>

        <!-- Opis funkcjonalności -->
        <div class="space-y-4">
          <h2
            class="text-lg md:text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-purple-200"
          >
            Co oferujemy?
          </h2>
          <ul class="space-y-2 text-blue-100/80 text-sm">
            <li class="flex items-start gap-2">
              <span class="text-blue-300 mt-1">•</span>
              <span>Śledzenie historii napraw</span>
              <li class="flex items-start gap-2">
                <span class="text-blue-300 mt-1">•</span>
                <span>Zarządzanie flotą pojazdów</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-blue-300 mt-1">•</span>
                <span>Rezerwacja terminów serwisowych</span>
              </li>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-blue-300 mt-1">•</span>
              <span>Naprawy mechaniczne różnych typów pojazdów</span>
            </li>
          </ul>
        </div>

        <!-- Call to Action -->
        <div class="pt-4 border-t border-white/10">
          <p class="text-blue-100/70 text-sm mb-3">Rozpocznij zarządzanie swoim warsztatem już dziś</p>
          <div class="flex flex-col sm:flex-row gap-2">
            <a
              href="/auth/register"
              class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white text-sm font-medium rounded-xl transition-all duration-200 text-center"
            >
              Załóż konto
            </a>
            <a
              href="/reservations/available"
              class="px-4 py-2 bg-white/10 hover:bg-white/20 text-blue-100 text-sm font-medium rounded-xl transition-all duration-200 text-center backdrop-blur-sm border border-white/10"
            >
              Zobacz terminy
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Prawa strona - Obrazek bez dodatkowego kontenera -->
    <img src={garageBg.src} alt="Garage Pro Background" class="flex-1 h-full object-contain" />
  </div>
</div>
