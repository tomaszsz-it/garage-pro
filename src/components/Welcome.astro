---
import { Calendar, Wrench, Car, House } from "lucide-react";
import garageBg from "../assets/backgrounds/garage-pro.png";

const navItems = [
  { href: "/reservations/available", label: "Dostępne terminy", icon: Calendar },
  { href: "/reservations", label: "Rezerwacje", icon: Wrench },
  { href: "/vehicles", label: "Pojazdy", icon: Car },
];
---

<div
  class="relative w-full h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4 sm:p-8 flex items-center justify-center"
>
  <!-- Główny kontener dopasowany do zawartości -->
  <div
    class="relative h-[50vh] flex flex-col md:flex-row rounded-2xl shadow-2xl overflow-hidden border border-white/10 bg-gradient-to-r from-white/10 to-white/5 backdrop-blur-xl"
  >
    <!-- Lewa strona - Panel nawigacyjny -->
    <div
      class="w-full md:w-auto md:min-w-[200px] bg-gradient-to-b from-white/10 to-white/5 backdrop-blur-xl p-4 md:p-6 flex flex-col justify-center"
    >
      <div class="space-y-4">
        <!-- Logo/Brand -->
        <div class="mb-8">
          <a
            href="/"
            class="text-lg font-bold text-white hover:text-blue-200 transition-colors flex items-center gap-2"
          >
            <House size={20} className="text-blue-200" />
            <span class="bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text">
              Twój Garaż
            </span>
          </a>
        </div>

        <!-- Pionowa nawigacja -->
        <nav class="flex flex-col md:flex-col space-y-2 md:space-y-3">
          {
            navItems.map((item) => {
              const IconComponent = item.icon;
              return (
                <a
                  href={item.href}
                  class="px-3 md:px-4 py-2 md:py-3 rounded-xl text-xs md:text-sm font-medium transition-all duration-150 ease-out flex items-center gap-2 md:gap-3 text-blue-100/90 hover:text-white hover:bg-white/10 backdrop-blur-sm group"
                >
                  <IconComponent size={16} className="md:size-[18px] text-blue-300 group-hover:text-blue-200" />
                  <span class="block">{item.label}</span>
                </a>
              );
            })
          }
        </nav>

        <!-- Dodatkowy tekst powitalny -->
        <div class="mt-4 md:mt-8 pt-4 md:pt-6 border-t border-white/10">
          <h2
            class="text-base md:text-lg font-semibold mb-1 md:mb-2 text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-purple-200"
          >
            Witaj w Garage Pro
          </h2>
          <p class="text-xs text-blue-100/80 leading-relaxed">System zarządzania warsztatem samochodowym</p>
        </div>
      </div>
    </div>

    <!-- Prawa strona - Obrazek bez dodatkowego kontenera -->
    <img src={garageBg.src} alt="Garage Pro Background" class="flex-1 h-full object-contain" />
  </div>
</div>
