---
// src/components/shared/Navigation.astro
const currentPath = Astro.url.pathname;

const navItems = [
  { href: "/reservations", label: "Rezerwacje", icon: "ğŸ“…" },
  { href: "/vehicles", label: "Pojazdy", icon: "ğŸš—" },
  { href: "/reservations/available", label: "DostÄ™pne terminy", icon: "ğŸ”" },
];
---

<nav class="bg-card border-b border-[var(--neutral-30)] shadow-[var(--elevation-2)] sticky top-0 z-40">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center space-x-4">
        <a href="/" class="text-[var(--font-size-title-3)] font-[var(--font-weight-semibold)] text-foreground hover:text-primary transition-colors">
          ğŸ  Garage Pro
        </a>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-4 py-2 rounded-[var(--radius-md)] text-[var(--font-size-body)] font-[var(--font-weight-medium)] transition-all duration-150 ease-out flex items-center gap-2 ${
              currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? 'bg-primary text-primary-foreground shadow-[var(--elevation-2)]'
                : 'text-[var(--neutral-70)] hover:text-foreground hover:bg-[var(--neutral-10)]'
            }`}
          >
            <span class="text-lg">{item.icon}</span>
            {item.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="p-2 rounded-[var(--radius-md)] text-[var(--neutral-70)] hover:text-foreground hover:bg-[var(--neutral-10)] transition-colors"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="space-y-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`block px-4 py-3 rounded-[var(--radius-md)] text-[var(--font-size-body)] font-[var(--font-weight-medium)] transition-all duration-150 ease-out flex items-center gap-3 ${
              currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? 'bg-primary text-primary-foreground shadow-[var(--elevation-2)]'
                : 'text-[var(--neutral-70)] hover:text-foreground hover:bg-[var(--neutral-10)]'
            }`}
          >
            <span class="text-xl">{item.icon}</span>
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
