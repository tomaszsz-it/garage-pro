---
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";
import Navigation from "../components/shared/Navigation.astro";

interface Props {
  title?: string;
}

const { title = "Garage Pro" } = Astro.props;

// TODO: Get user from Astro.locals.user when middleware is implemented
const user = null; // Astro.locals.user || null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation user={user} />
    <slot />
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
