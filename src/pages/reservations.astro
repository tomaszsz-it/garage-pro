---
import Layout from "../layouts/Layout.astro";
import { ReservationsView } from "../components/reservations/ReservationsView";

export const prerender = false;
---

<Layout title="Rezerwacje - Garage Pro">
  <main class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Twoje Rezerwacje</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-2">
        Przeglądaj i zarządzaj swoimi rezerwacjami w warsztacie.
      </p>
    </div>
    <ReservationsView client:load />
  </main>
</Layout>
